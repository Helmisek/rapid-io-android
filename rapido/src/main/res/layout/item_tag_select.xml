<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>

		<variable
			name="checkedChangedListener" type="android.widget.CompoundButton.OnCheckedChangeListener" />

		<variable
			name="tag" type="io.rapid.rapido.data.model.Tag" />

		<variable
			name="initState" type="boolean" />
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<android.support.v7.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="@dimen/spacing_4"
			app:cardBackgroundColor="@{tag.color}">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingTop="@dimen/spacing_4"
				android:paddingBottom="@dimen/spacing_4"
				android:paddingLeft="@dimen/spacing_16"
				android:paddingRight="@dimen/spacing_16"
				android:textAllCaps="true"
				android:textColor="@color/white"
				android:text="@{tag.name}"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2"
				tools:text="Tag 0"
				tools:showIn="@layout/drawer_filter" />
		</android.support.v7.widget.CardView>

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:checked="@{initState}"
			android:onCheckedChanged="@{checkedChangedListener}" />
	</LinearLayout>

</layout>
