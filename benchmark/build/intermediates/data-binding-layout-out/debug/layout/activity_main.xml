<?xml version="1.0" encoding="utf-8"?>

                                                
	
           
                                                              
        
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical">

				<RadioGroup
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:orientation="horizontal">

					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:tag="binding_1"              
						android:text="Rapid.IO"/>

					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:tag="binding_2"               
						android:text="Firebase"/>

				</RadioGroup>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:text="1 connection - N mutations" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:text="Delay" />
					<Switch
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:tag="binding_3"                      />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="1"
						android:textSize="10sp"
						android:tag="binding_4"                                                    />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="10"
						android:textSize="10sp"
						android:tag="binding_5"                                                     />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="10sp"
						android:text="100"
						android:tag="binding_6"                                                      />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="10sp"
						android:text="500"
						android:tag="binding_7"                                                      />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="1 000"
						android:textSize="10sp"
						android:tag="binding_8"                                                       />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="3 000"
						android:textSize="10sp"
						android:tag="binding_9"                                                       />
					<Button
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="10 000"
						android:textSize="9sp"
						android:tag="binding_10"                                                       />
				</LinearLayout>
			</LinearLayout>
		</android.support.v7.widget.CardView>
		<android.support.v7.widget.CardView
			android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:padding="8dp" android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textAppearance="@style/TextAppearance.AppCompat.Title"
					android:text="Collection Manager" />
				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:tag="binding_11"                   
					android:inputType="textNoSuggestions"
					android:hint="Collection name" />
				<Button
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Show contents"
					android:tag="binding_12"                                
					                                                      />
				<Button
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Import from CSV"
					android:tag="binding_13"                                
					                                                   />
				<ProgressBar
					android:layout_width="match_parent" android:layout_height="wrap_content"
					android:tag="binding_14"                         
					style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
			</LinearLayout>
		</android.support.v7.widget.CardView>

		<View
			android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:tag="binding_15"           
			android:padding="8dp"
			android:textSize="12sp"
			android:typeface="monospace"
			android:background="#efefef"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"
			tools:text="console" />
	</LinearLayout>
         
